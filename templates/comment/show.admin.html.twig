{% extends 'base.html.twig' %}

{% block title %}Commentaire {{ comment.id }} · {{ comment.post.name }} · Blog{% endblock %}

{% block body %}
    <div class="body-content">
        <h1>Comment</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ comment.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ comment.username }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ comment.content }}</td>
                </tr>
                <tr>
                    <th>Valid</th>
                    <td>{{ comment.valid ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('comment_admin_index') }}">back to list</a>

        <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

        {{ include('comment/_delete_form.html.twig') }}
    </div>
{% endblock %}
