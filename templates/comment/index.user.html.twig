{% extends 'base.html.twig' %}

{% block title %}Commentaires · {{ post.title }} · Blog{% endblock %}

{% block body %}
    <div class="body-content">
        <h1>Comment index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Content</th>
                    <th>Valid</th>
                    <th>CreatedAt</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.username }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.valid ? 'Yes' : 'No' }}</td>
                    <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('comment_new', {'id': post.id, 'slug': post.slug}) }}">Nouveau commentaire</a>
    </div>
{% endblock %}
