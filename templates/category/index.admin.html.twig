{% extends 'base.admin.html.twig' %}

{% block title %}Catégories · Blog{% endblock %}

{% block body %}
    <div class="body-content">
        <h1>Liste des catégories</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_admin_show', {'id': category.id}) }}">show</a>
                        <a href="{{ path('category_admin_edit', {'id': category.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_admin_new') }}">Create new</a>
    </div>
{% endblock %}
