{% extends 'base.admin.html.twig' %}

{% block title %}Posts · Blog{% endblock %}

{% block body %}
    <div class="body-content">
        <h1>Liste des posts</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Content</th>
                    <th>Slug</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>PublishedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.slug }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('post_admin_show', {'id': post.id}) }}">Voir</a>
                        <a href="{{ path('post_edit', {'id': post.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('post_new') }}">Créer un nouveau post</a>
    </div>
{% endblock %}
