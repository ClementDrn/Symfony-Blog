{% extends 'base.admin.html.twig' %}

{% block title %}{{ post.title }} Â· Blog{% endblock %}

{% block body %}
    <div class="body-content">
        <h1>Post</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ post.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ post.description }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ post.content }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ post.slug }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>PublishedAt</th>
                    <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('post_admin_index') }}">back to list</a>

        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

        {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
