        <div class="sidebar">
            <h2>Cat√©gories</h2>
            <ul class="sidebar-links">
                {% for category in categories %}
                    {% if category.counter > 0 %}
                        <li>
                            <a href="{{ path('category_user_show', {'id': category.id}) }}">{{ category.name }}</a> 
                            <span>({{category.counter}})</span> 
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

            <h2>Derniers posts</h2>
            <ul class="sidebar-links">
                {% for i in 0..max_count-1 %}
                    {% set post = posts[i] %}
                    <li>
                        <a href="{{path('post_user_show', {'id': post.id, 'slug': post.slug})}}">{{ post.title }}</a> 
                    </li>
                {% endfor %}
            </ul>
        </div>